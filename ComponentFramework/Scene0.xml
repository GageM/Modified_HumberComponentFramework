<?xml version="1.0" encoding="utf-8"?>
<Root>
  <Scene0>
	  <!--Setting up meshes and shapes-->
	  <Mesh name="SkullMesh" filename="meshes/Skull.obj">
		  <Shape name ="SkullSphereShape">
			  <Sphere radius ="1.0" centreX="0.0" centreY="0.0" centreZ="0.0"/>
		  </Shape>
	  </Mesh>

	  <Mesh name="CheckerMesh" filename="meshes/CheckerPiece.obj">
		  <Shape name ="CheckerCylinderShape">
			  <!--TODO for Assignment 1-->
			  <Cylinder radius ="3.70" 
                  capAX="0.0" capAY="0.0" capAZ="-1.2" 
                  capBX="0.0" capBY="0.0" capBZ="1.2"
				/>
		  </Shape>
	  </Mesh>
	  
	  <Mesh name="MarioMesh" filename="meshes/Mario.obj">
		  <Shape name="marioCapsuleShape">
			  <!--TODO for Assignment 1-->
        <Capsule radius ="0.7"
                  capAX="0.0" capAY="0.0" capAZ="-0.8"
                  capBX="0.0" capBY="0.0" capBZ="0.8"
        />
		  </Shape>
	  </Mesh>

	  <Mesh name="PlaneMesh" filename="meshes/Plane.obj">
		  <Shape name="CheckerboardPlaneShape">
			  <!--TODO for Assignment 1-->
			  <Box posX ="0.0" posY ="0.0" posZ ="0.2"
             hExtentX ="5.1" hExtentY ="5.1" hExtentZ="0.1"
             angleDeg ="0.0" axisX ="1.0" axisY ="0.0" axisZ ="0.0"
				/>
		  </Shape>
	  </Mesh>
	  
	  <Mesh name="CubeMesh" filename="meshes/Cube.obj">
		  <Shape name ="CubeShape">
			  <!--TODO for Assignment 1-->
        <Box posX ="0.0" posY ="0.0" posZ ="0.0"
             hExtentX ="1.0" hExtentY ="1.0" hExtentZ="1.0"
             angleDeg ="0.0" axisX ="1.0" axisY ="0.0" axisZ ="0.0"
				/>
		  </Shape>
	  </Mesh>

    <Mesh name="DoomKeyCardMesh" filename="meshes/DoomKeyCard.obj">
      <Shape name ="DoomKeyCardShape">
        <Box posX ="0.0" posY ="0.0" posZ ="0.0"
             hExtentX ="0.5" hExtentY ="0.7" hExtentZ="0.2"
             angleDeg ="0.0" axisX ="1.0" axisY ="0.0" axisZ ="0.0"
				/>
      </Shape>
    </Mesh>

	  <!--Setting up textures-->
	  <Texture name="BoardTexture" filename="textures/8x8_checkered_board.png"/>
	  <Texture name="RedCheckerTexture" filename="textures/redCheckerPiece.png"/>
	  <Texture name="WhiteCheckerTexture" filename="textures/whiteCheckerPiece.png"/>
	  <Texture name="MarioTexture" filename="textures/mario_main.png"/>
    
    <!--Scene HDRIs-->
    <texture name="Scene0HDRI" filename="textures/EveningEnvironmentHDRI.jpg"/>
    
    <!--Doom Key Card Textures-->
    <Texture name="DoomKeyCard_BaseColor" filename="textures/Doom_Key_Card_Base_Color.png"/>
    <Texture name="DoomKeyCard_Roughness" filename="textures/Doom_Key_Card_Roughness.png"/>
    <Texture name="DoomKeyCard_Metallic" filename="textures/Doom_Key_Card_Metallic.png"/>

	  <!--Setting up shader-->
	  <Shader name="Shader" vertFilename="shaders/textureVert.glsl" fragFilename="shaders/textureFrag.glsl"/>
    <Shader name="debugShader" vertFilename="shaders/debugVert.glsl" fragFilename="shaders/debugFrag.glsl"/>
    <Shader name="PBR_Shader" vertFilename="shaders/PBRVert.glsl" fragFilename="shaders/PBRFrag.glsl"/>
    <Shader name="CubemapShader" vertFilename="shaders/SkyboxVert.glsl" fragFilename="shaders/SkyboxFrag.glsl"/>

    <!--Set up the cubemap-->
    <Cubemap name="mainCubemap" PXfile="textures/CN_Tower/posx.jpg" PYfile="textures/CN_Tower/posy.jpg" PZfile="textures/CN_Tower/posz.jpg"
																NXfile="textures/CN_Tower/negx.jpg" NYfile="textures/CN_Tower/negy.jpg" NZfile="textures/CN_Tower/negz.jpg"/>
    
    <!--Set up the materials-->
    <Material name="MarioMat" BCMap="MarioTexture" roughness="0.5" metallic="0.0"/>
    <Material name="RedCheckerMat" BCMap="RedCheckerTexture" roughness="0.5" metallic="0.0"/>
    <Material name="WhiteCheckerMat" BCMap="WhiteCheckerTexture" roughness="0.5" metallic="0.0"/>
    <Material name="BoardMat" BCMap="BoardTexture" roughness="0.5" metallic="0.0"/>
    <Material name="DoomKeyMat" BCMap="DoomKeyCard_BaseColor" roughness="0.5" metallic="0.0"/>
    
	  
	  <!--Now that we have meshes, textures, and a shader we can set up actors-->
	  <Actor actorname="ActorGameBoard" parent="none">
		<Transform posx="0.0" posy="0.0" posz="-17.0" 
				   angleDeg="-20.0" axisx="1.0" axisy="0.0" axisz="0.0"
				   scalex="1.0" scaley="1.0" scalez="1.0"/>
		<Mesh name="PlaneMesh"/>
		<Shape name="CheckerboardPlaneShape"/>
		<Shader name ="Shader"/>
		<Texture name ="BoardTexture"/>
    <Material name ="BoardMat"/>
		<Physics />
	  </Actor>

	  <Actor actorname="ActorChecker1" parent="ActorGameBoard">
		  <Transform posx="-4.5" posy="-4.5" posz="0.0"
					 angleDeg="0.0" axisx="1.0" axisy="0.0" axisz="0.0"
					 scalex="0.15" scaley="0.15" scalez="0.15"/>
		  <Mesh name="CheckerMesh"/>
		  <Shape name="CheckerCylinderShape"/>
		  <Shader name ="Shader"/>
		  <Texture name ="RedCheckerTexture"/>
      <Material name ="RedCheckerMat"/>
		  <Physics />
	  </Actor>

	  <Actor actorname="ActorChecker2" parent="none">
		  <Transform posx="-18.0" posy="0.0" posz="-14.0"
					 angleDeg="90.0" axisx="1.0" axisy="0.0" axisz="0.0"
					 scalex="1.0" scaley="1.0" scalez="1.0"/>
		  <Mesh name="CheckerMesh"/>
		  <Shape name="CheckerCylinderShape"/>
		  <Shader name ="Shader"/>
		  <Texture name ="RedCheckerTexture"/>
      <Material name ="RedCheckerMat"/>
		  <Physics />
	  </Actor>

	  <Actor actorname="ActorSkull" parent="none">
		  <Transform posx="5.0" posy="0.0" posz="-16.0"
					 angleDeg="0.0" axisx="1.0" axisy="0.0" axisz="0.0"
					 scalex="1" scaley="1" scalez="1"/>
		  <Mesh name="SkullMesh"/>
		  <Shape name="SkullSphereShape"/>
		  <Shader name ="Shader"/>
		  <Texture name ="WhiteCheckerTexture"/>
      <Material name ="WhiteCheckerMat"/>
		  <Physics />
	  </Actor>

	  <Actor actorname="ActorCube" parent="none">
		  <Transform posx="1.0" posy="2.0" posz="-16.0"
					 angleDeg="45.0" axisx="1.0" axisy="1.0" axisz="0.0"
					 scalex="1.0" scaley="1.0" scalez="1.0"/>
		  <Mesh name="CubeMesh"/>
		  <Shape name="CubeShape"/>
		  <Shader name ="Shader"/>
		  <Texture name ="RedCheckerTexture"/>
      <Material name ="RedCheckerMat"/>
		  <Physics />
	  </Actor>

	  <Actor actorname="ActorMario" parent="none">
		  <Transform posx="-7.0" posy="1.0" posz="-15.0"
					 angleDeg="180.0" axisx="0.0" axisy="1.0" axisz="0.0"
					 scalex="1.0" scaley="1.0" scalez="1.0"/>
		  <Mesh name="MarioMesh"/>
		  <Shape name="marioCapsuleShape"/>
		  <Shader name ="Shader"/>
		  <Texture name ="MarioTexture"/>
      <Material name ="MarioMat"/>
		  <Physics />
	  </Actor>

    <Actor actorname="ActorDoomKeyCard" parent="none">
      <Transform posx="2.0" posy="3.0" posz="-10.0"
					 angleDeg="180.0" axisx="0.0" axisy="1.0" axisz="0.0"
					 scalex="2.0" scaley="2.0" scalez="2.0"/>
      <Mesh name="DoomKeyCardMesh"/>
      <Shape name="DoomKeyCardShape"/>
      <Shader name ="Shader"/>
      <Texture name ="DoomKeyCard_BaseColor"/>
      <Material name ="DoomKeyMat"/>
      <Physics />
    </Actor>

	  <!-- Set up camera and light actors-->
	  <Camera cameraname="Camera1" parent="none">
		  <Transform posx="0.0" posy="0.0" posz="0.0" 
					 angleDeg="0.0" axisx="1.0" axisy="0.0" axisz="0.0"
					 scalex="1.0" scaley="1.0" scalez="1.0"/>
	  </Camera>

	  <Light lightname="Light1" parent="none" lightstyle="DirectionLight"
			 posx="0.0" posy="0.0" posz="-10.0"
		     red="1.0" green="1.0" blue="1.0" alpha="0.0"
			 intensity="1.0"
			 falloffx="0.0" falloffy="0.0" falloffz="0.0"/>	
    
    <!-- Set up skybox actor-->
    <Skybox name="Skybox1" parent="Camera1" mesh ="CubeMesh" shader="CubemapShader" cubemap="mainCubemap"/>
    
  </Scene0>
</Root>
